<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý người dùng</title>
    <link href="/assets/bs5/bootstrap.min.css" rel="stylesheet">
    <script src="/assets/jquery/jquery.js"></script>
    <script src="/assets/swal2/swal2.js"></script>
</head>

<body>
    <link rel="stylesheet" href="/css/style.css">
    <a href="/dashboard" class="back-to-dashboard">
        <img src="/icons/bx-log-out.svg">
    </a>
    <div class="container mt-5">
        <h2>Quản lý người dùng</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Tên đăng nhập</th>
                    <th>Email</th>
                    <th>Vai trò</th>
                    <th>Số điện thoại</th>
                    <th>Quốc gia</th>
                    <th>Thành phố</th>
                    <th>Quyền</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user=> { %>
                    <tr>
                        <td>
                            <%= user.username %>
                        </td>
                        <td>
                            <%= user.email %>
                        </td>
                        <td>
                            <%= user.role %>
                        </td>
                        <td>
                            <%= user.phone || 'N/A' %>
                        </td>
                        <td>
                            <%= user.country || 'N/A' %>
                        </td>
                        <td>
                            <%= user.city || 'N/A' %>
                        </td>
                        <td>
                            <select class="form-select role-selector" data-id="<%= user._id %>">
                                <option value="user" <%=user.role==='user' ? 'selected' : '' %>>Người dùng</option>
                                <option value="admin" <%=user.role==='admin' ? 'selected' : '' %>>Quản trị viên</option>
                            </select>
                        </td>
                        <td>
                            <div>
                                <label>
                                    <input type="checkbox" class="permission" data-id="<%= user._id %>"
                                        data-permission="manageInventory" <%=user.permissions.manageInventory
                                        ? 'checked' : '' %>> Quản lý kho
                                </label>
                            </div>
                            <div>
                                <label>
                                    <input type="checkbox" class="permission" data-id="<%= user._id %>"
                                        data-permission="sellProducts" <%=user.permissions.sellProducts ? 'checked' : ''
                                        %>> Bán hàng
                                </label>
                            </div>
                            <div>
                                <label>
                                    <input type="checkbox" class="permission" data-id="<%= user._id %>"
                                        data-permission="updateStoreInfo" <%=user.permissions.updateStoreInfo
                                        ? 'checked' : '' %>> Cập nhật cửa hàng
                                </label>
                            </div>
                        </td>
                        <td>
                            <button class="btn btn-primary save-changes" data-id="<%= user._id %>">Lưu thay đổi</button>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

    <script>
        $(document).ready(function () {
            // Biến tạm thời lưu quyền thay đổi và vai trò
            const userUpdates = {};

            // Lắng nghe sự kiện thay đổi trên checkbox (quyền)
            $('.permission').on('change', function () {
                const userId = $(this).data('id');
                const permission = $(this).data('permission');
                const isChecked = $(this).is(':checked');

                if (!userUpdates[userId]) {
                    userUpdates[userId] = { permissions: {} };
                }

                userUpdates[userId].permissions[permission] = isChecked;
            });

            // Lắng nghe sự kiện thay đổi trên dropdown (vai trò)
            $('.role-selector').on('change', function () {
                const userId = $(this).data('id');
                const role = $(this).val();

                if (!userUpdates[userId]) {
                    userUpdates[userId] = { permissions: {} };
                }

                userUpdates[userId].role = role;
            });

            // Gửi thay đổi lên server khi bấm "Lưu thay đổi"
            $('.save-changes').on('click', function () {
                const userId = $(this).data('id');

                if (!userUpdates[userId]) {
                    Swal.fire({
                        icon: 'info',
                        title: 'Không có thay đổi',
                        text: 'Bạn chưa thay đổi thông tin nào.',
                    });
                    return;
                }

                // Gửi yêu cầu cập nhật quyền và vai trò
                $.ajax({
                    url: `/admin/users/${userId}`,
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(userUpdates[userId]),
                    success: function (response) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Thành công',
                            text: 'Cập nhật thông tin thành công.',
                        }).then(() => {
                            // Xóa trạng thái tạm thời sau khi cập nhật
                            delete userUpdates[userId];
                        });
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi',
                            text: 'Không thể lưu thay đổi.',
                        });
                    }
                });
            });
        });
    </script>
</body>

</html>