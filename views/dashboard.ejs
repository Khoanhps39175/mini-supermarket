<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="/assets/bs5/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f6f9;
            margin: 0;
            display: flex;
            overflow: hidden;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #34495e;
            position: fixed;
            left: 0;
            top: 0;
            transition: transform 0.3s ease;
            overflow-y: auto;
            z-index: 1000;
        }

        .sidebar.hide {
            transform: translateX(-100%);
        }

        .logo-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 20px;
            background-color: #2c3e50;
            color: #fff;
            font-size: 20px;
        }

        #menu-btn {
            font-size: 24px;
            cursor: pointer;
            color: #fff;
            border: none;
            background: none;
        }

        #show-menu-btn {
    font-size: 10px;
    cursor: pointer;
    color: #fff;
    background-color: #34495e;
    border: none;
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 20px;
    z-index: 1001;
    display: none;
    justify-content: center;
    align-items: center;
    transition: transform 0.3s ease, background-color 0.3s ease;
}

#show-menu-btn i {
    transform: rotate(90deg);
}

#show-menu-btn:hover {
    background-color: #1abc9c;
}


        .nav_list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .nav_list li {
            margin: 10px 0;
        }

        .menu-item {
            display: flex;
            align-items: center;
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            background-color: #34495e;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .menu-item i {
            margin-right: 10px;
        }

        .menu-item:hover {
            background-color: #1abc9c;
        }

        .content {
            margin-left: 250px;
            padding: 0px;
            flex-grow: 1;
            background-color: #ecf0f1;
            height: 100vh;
            overflow: auto;
            transition: margin-left 0.3s ease;
        }

        .content.hide {
            margin-left: 0;
        }

        iframe {
            width: 100%;
            height: 100vh;
            border: none;
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="logo-content" style="text-align: center;">
            <span 
            style="color: #00d0ff; font-size: 25px; text-decoration: none;"
            onmouseover="this.style.color='white'; this.style.backgroundColor='#007bff'; this.style.padding='2px 5px'; this.style.borderRadius='5px';"
            onmouseout="this.style.color='#333'; this.style.backgroundColor=''; this.style.padding=''; this.style.borderRadius='';">
            Home
        </span>
            <button id="menu-btn">
                <i class="fas fa-bars"></i>
            </button>
        </div>
        <ul class="nav_list">
            <li><a href="/sales" class="menu-item"><i class="fas fa-shopping-cart"></i><span>Bán hàng</span></a></li>
            <li><a href="/products" class="menu-item"><i class="fas fa-warehouse"></i><span>Quản lý kho</span></a></li>
            <li><a href="/sales/report" class="menu-item"><i class="fas fa-chart-bar"></i><span>Báo cáo - Thống kê</span></a></li>
            <li><a href="/sales/history" class="menu-item"><i class="fas fa-history"></i><span>Lịch sử mua hàng</span></a></li>
            <li><a href="/shop" class="menu-item"><i class="fas fa-store"></i><span>Thông tin cửa hàng</span></a></li>
            <li><a href="/update-info" class="menu-item"><i class="fas fa-user-edit"></i><span>Đổi thông tin</span></a></li>
            <li><a href="/admin/users" class="menu-item"><i class="fas fa-users-cog"></i><span>Quản lý người dùng</span></a></li>
            <li><a href="/change-password" class="menu-item"><i class="fas fa-key"></i><span>Đổi mật khẩu</span></a></li>
            <li><a href="/logout" class="menu-item"><i class="fas fa-sign-out-alt"></i><span>Đăng xuất</span></a></li>
        </ul>
    </div>

    <!-- Button to show menu when hidden -->
    <button id="show-menu-btn">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Main content -->
    <div class="content" id="content">
        <iframe id="iframe-content" src="/sales" title="Content"></iframe>
    </div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const menuBtn = document.getElementById('menu-btn');
        const sidebar = document.getElementById('sidebar');
        const content = document.getElementById('content');
        const showMenuBtn = document.getElementById('show-menu-btn');
        const iframe = document.getElementById('iframe-content');

        if (menuBtn && sidebar && content && showMenuBtn) {
            menuBtn.addEventListener('click', () => {
                sidebar.classList.add('hide');
                content.classList.add('hide');
                showMenuBtn.style.display = 'block';
            });

            showMenuBtn.addEventListener('click', () => {
                sidebar.classList.remove('hide');
                content.classList.remove('hide');
                showMenuBtn.style.display = 'none';
            });
        }

        if (iframe) {
            const menuItems = document.querySelectorAll('.menu-item');
            if (menuItems.length > 0) {
                menuItems.forEach(item => {
                    item.addEventListener('click', function (e) {
                        e.preventDefault();
                        const url = this.getAttribute('href');
                        iframe.src = url;
                    });
                });
            } else {
                console.warn('No menu items found.');
            }
        }
    });
    menuBtn.addEventListener('click', () => {
    sidebar.classList.add('hide');
    content.classList.add('hide');
    showMenuBtn.style.display = 'flex'; // Chuyển sang flex để hiện thanh dài
});

showMenuBtn.addEventListener('click', () => {
    sidebar.classList.remove('hide');
    content.classList.remove('hide');
    showMenuBtn.style.display = 'none';
});

</script>

</body>

</html>
